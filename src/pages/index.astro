---
import ProjectCard from '../components/ProjectCard.astro';
import config from '../data/portfolio.config.json';

// ডাটা এক্সট্রাকশন
const { identity, nexus_terminal, projects, socials, micro_logs } = config;

// লেটেস্ট লগ খুঁজে বের করা (Digital Garden Connection)
// এটি অটোমেটিক্যালি আপনার মাইক্রো-লগের প্রথম এন্ট্রিটি হোম পেজে দেখাবে
const latestLog = micro_logs && micro_logs.length > 0 ? micro_logs[0] : null;
---

<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={identity.role + " - " + identity.philosophy}>
    <title>{identity.name} | {identity.role}</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-slate-950 text-slate-200 font-sans selection:bg-indigo-500 selection:text-white antialiased min-h-screen flex flex-col">

    <div class="fixed inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 pointer-events-none z-0"></div>

    <main class="w-full max-w-6xl mx-auto p-4 md:p-8 space-y-10 flex-grow relative z-10">

        <header class="grid grid-cols-1 md:grid-cols-12 gap-6 animate-fade-in-up">
            
            <div class="md:col-span-8 bg-slate-900/40 backdrop-blur-xl border border-slate-800 rounded-2xl p-8 flex flex-col md:flex-row items-center md:items-start gap-8 relative overflow-hidden group">
                <div class="absolute -top-20 -right-20 w-60 h-60 bg-indigo-500/10 rounded-full blur-3xl group-hover:bg-indigo-500/20 transition duration-1000"></div>

                <div class="relative w-36 h-36 shrink-0">
                    <img src={identity.avatar_url} alt={identity.name} class="w-full h-full object-cover rounded-xl border-2 border-slate-800 shadow-2xl grayscale group-hover:grayscale-0 transition duration-500">
                    <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-slate-950 rounded-full flex items-center justify-center">
                        <div class="w-3 h-3 bg-emerald-500 rounded-full animate-pulse shadow-[0_0_8px_#10b981]"></div>
                    </div>
                </div>

                <div class="text-center md:text-left z-10 flex-grow">
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-950/80 border border-slate-800 text-[10px] font-mono text-indigo-400 mb-4 shadow-lg">
                        <i class="fa-solid fa-code-branch"></i>
                        <span>{config.meta.version}</span>
                    </div>
                    
                    <h1 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight mb-2">{identity.name}</h1>
                    <p class="text-lg text-slate-400 mb-4 font-light tracking-wide">{identity.role}</p>
                    <p class="text-sm text-slate-500 font-mono leading-relaxed max-w-md mx-auto md:mx-0 italic">
                        "{identity.philosophy}"
                    </p>
                    
                    <div class="mt-8 flex flex-wrap gap-4 justify-center md:justify-start items-center">
                        <a href="/about" class="px-6 py-2.5 rounded-xl bg-indigo-600 hover:bg-indigo-500 text-white text-xs font-bold font-mono tracking-wider shadow-lg shadow-indigo-500/20 transition-all duration-300 hover:-translate-y-1 flex items-center gap-2 group">
                            <i class="fa-solid fa-terminal"></i>
                            ENTER NEXUS CORE
                            <i class="fa-solid fa-arrow-right opacity-0 group-hover:opacity-100 -ml-2 group-hover:ml-0 transition-all"></i>
                        </a>

                        <div class="flex gap-4 border-l border-slate-800 pl-4 ml-2">
                            {socials.map((social) => (
                                <a href={social.url} target="_blank" class="text-slate-500 hover:text-white transition-transform hover:scale-110">
                                    <i class={`fa-brands ${social.icon} fa-lg`}></i>
                                </a>
                            ))}
                        </div>
                    </div>
                </div>
            </div>

            <div class="md:col-span-4 flex flex-col gap-4">
                <div class="bg-slate-900/40 backdrop-blur-xl border border-slate-800 rounded-2xl p-6 h-full flex flex-col justify-between relative overflow-hidden group">
                    <div class="flex justify-between items-center mb-6">
                        <h3 class="text-[10px] font-mono text-slate-500 uppercase tracking-[0.2em]">System Metrics</h3>
                        <i class="fa-solid fa-server text-emerald-500/50 group-hover:text-emerald-500 transition-colors"></i>
                    </div>
                    
                    <div class="space-y-6">
                        <div>
                            <div class="flex justify-between text-xs font-mono mb-2 text-slate-400">
                                <span>COGNITIVE_LOAD</span>
                                <span class="text-emerald-400">{nexus_terminal.efficiency}%</span>
                            </div>
                            <div class="w-full bg-slate-800 rounded-full h-1.5 overflow-hidden">
                                <div class="bg-gradient-to-r from-emerald-600 to-emerald-400 h-1.5 rounded-full shadow-[0_0_10px_rgba(16,185,129,0.5)] animate-[pulse_4s_infinite]" style={`width: ${nexus_terminal.efficiency}%`}></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between text-xs font-mono mb-2 text-slate-400">
                                <span>STORAGE_LINK</span>
                                <span class="text-indigo-400">SYNCED</span>
                            </div>
                            <div class="p-2 bg-slate-950 rounded border border-slate-800 text-[10px] font-mono text-slate-500 truncate">
                                {nexus_terminal.storage_drive}
                            </div>
                        </div>
                    </div>

                    {latestLog && (
                        <div class="mt-auto pt-6 border-t border-slate-800/50">
                            <div class="flex items-center gap-2 mb-2">
                                <span class="w-1.5 h-1.5 rounded-full bg-amber-500 animate-pulse"></span>
                                <span class="text-[10px] font-mono text-amber-500 uppercase">Latest Log: {latestLog.date}</span>
                            </div>
                            <p class="text-xs text-slate-400 line-clamp-2 font-light">
                                "{latestLog.content}"
                            </p>
                        </div>
                    )}
                </div>
            </div>
        </header>

        <div class="flex items-center gap-4 py-4 opacity-50">
            <div class="h-[1px] bg-gradient-to-r from-transparent via-slate-700 to-transparent flex-grow"></div>
            <span class="text-[10px] font-mono text-slate-600 uppercase tracking-widest">Deployed Modules</span>
            <div class="h-[1px] bg-gradient-to-r from-transparent via-slate-700 to-transparent flex-grow"></div>
        </div>

        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 pb-12">
            {projects.map((project) => (
                <ProjectCard 
                    title={project.title}
                    role={project.role}
                    description={project.description}
                    stack={project.stack}
                    image={project.image}
                    accent={project.accent}
                    url={project.url}
                />
            ))}
        </section>

    </main>

    <footer class="border-t border-slate-900 bg-slate-950/80 backdrop-blur z-10">
        <div class="max-w-6xl mx-auto px-4 md:px-8 py-6 flex flex-col md:flex-row items-center justify-between text-[10px] font-mono uppercase tracking-wider text-slate-600 gap-4">
            <div class="flex items-center gap-4">
                <span class="flex items-center gap-2">
                    <span class="w-1.5 h-1.5 rounded-full bg-emerald-500"></span>
                    {identity.availability}
                </span>
                <span class="hidden md:inline">|</span>
                <span>{identity.location}</span>
            </div>
            
            <div class="flex items-center gap-4">
                <span>© 2026 NEXUS PROTOCOL</span>
                <a href="mailto:contact@sazid.com" class="hover:text-indigo-400 transition">INIT_CONTACT()</a>
            </div>
        </div>
    </footer>

</body>
</html>
