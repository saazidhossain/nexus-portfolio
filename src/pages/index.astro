---
import ProjectCard from '../components/ProjectCard.astro';
import config from '../data/portfolio.config.json';
const { identity, nexus_terminal, projects, socials } = config;
---

<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{identity.name} | Nexus Portfolio</title>
<div class="mt-6 flex flex-wrap gap-4 justify-center md:justify-start items-center">
    <a href="/about" class="px-5 py-2 rounded-full bg-slate-900 border border-slate-800 text-xs font-mono text-indigo-400 hover:text-white hover:border-indigo-500 hover:bg-indigo-500/10 transition-all duration-300 flex items-center gap-2 group">
        <i class="fa-solid fa-terminal group-hover:animate-pulse"></i>
        ENTER NEXUS CORE
    </a>

    <div class="flex gap-4">
        {socials.map((social) => (
            <a href={social.url} target="_blank" class="text-slate-400 hover:text-white transition transform hover:scale-110">
                <i class={`fa-brands ${social.icon} fa-lg`}></i>
            </a>
        ))}
    </div>
</div>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

</head>
<body class="bg-slate-950 text-slate-200 font-sans antialiased min-h-screen flex flex-col">
    <main class="w-full max-w-6xl mx-auto p-4 md:p-8 space-y-8 flex-grow">
        <header class="grid grid-cols-1 md:grid-cols-12 gap-6 animate-fade-in-up">
            <div class="md:col-span-8 bg-slate-900/50 backdrop-blur-md border border-slate-800 rounded-xl p-8 flex flex-col md:flex-row items-center md:items-start gap-8 relative overflow-hidden">
                <div class="absolute -top-10 -right-10 w-40 h-40 bg-indigo-500/10 rounded-full blur-3xl"></div>
                <div class="relative w-32 h-32 shrink-0">
                    <img src={identity.avatar_url} alt={identity.name} class="w-full h-full object-cover rounded-xl border border-slate-700 shadow-xl grayscale hover:grayscale-0 transition duration-500">
                    <div class="absolute bottom-0 right-0 w-4 h-4 bg-emerald-500 border-2 border-slate-900 rounded-full animate-pulse"></div>
                </div>
                <div class="text-center md:text-left z-10">
                    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-slate-950 border border-slate-800 text-xs font-mono text-indigo-400 mb-3"><i class="fa-solid fa-code-branch"></i><span>{config.meta.version}</span></div>
                    <h1 class="text-4xl font-extrabold text-white tracking-tight mb-2">{identity.name}</h1>
                    <p class="text-lg text-slate-400 mb-4 font-light">{identity.role}</p>
                    <p class="text-sm text-slate-500 font-mono leading-relaxed max-w-md">"{identity.philosophy}"</p>
                    <div class="mt-6 flex gap-4 justify-center md:justify-start">
                        {socials.map((social) => (<a href={social.url} target="_blank" class="text-slate-400 hover:text-white transition"><i class={`fa-brands ${social.icon} fa-lg`}></i></a>))}
                    </div>
                </div>
            </div>
            <div class="md:col-span-4 bg-slate-900/50 backdrop-blur-md border border-slate-800 rounded-xl p-6 flex flex-col justify-between">
                <div class="flex justify-between items-center mb-4"><h3 class="text-xs font-mono text-slate-500 uppercase tracking-widest">System Metrics</h3><i class="fa-solid fa-server text-emerald-500"></i></div>
                <div class="space-y-6">
                    <div><div class="flex justify-between text-xs font-mono mb-1 text-slate-400"><span>EFFICIENCY</span><span class="text-emerald-400">{nexus_terminal.efficiency}%</span></div><div class="w-full bg-slate-800 rounded-full h-1.5"><div class="bg-emerald-500 h-1.5 rounded-full" style={`width: ${nexus_terminal.efficiency}%`}></div></div></div>
                    <div><div class="flex justify-between text-xs font-mono mb-1 text-slate-400"><span>STORAGE</span><span class="text-indigo-400">Linked</span></div><div class="text-[10px] text-slate-600 font-mono mt-1">{nexus_terminal.storage_drive}</div></div>
                </div>
            </div>
        </header>
        <div class="flex items-center gap-4 py-2"><div class="h-[1px] bg-slate-800 flex-grow"></div><span class="text-xs font-mono text-slate-600 uppercase">Deployed Projects</span><div class="h-[1px] bg-slate-800 flex-grow"></div></div>
        <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {projects.map((project) => (<ProjectCard {...project} />))}
        </section>
    </main>
    <footer class="border-t border-slate-800 bg-slate-900/80 backdrop-blur mt-auto p-4 text-center text-[10px] font-mono text-slate-500">Â© 2026 NEXUS PROTOCOL | API: ACTIVE</footer>
</body>

</html>

