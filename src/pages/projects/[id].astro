---
import config from '../../data/portfolio.config.json';

// ডাটা জেনারেশন ইঞ্জিন (Data Generation Engine)
export async function getStaticPaths() {
  return config.projects.map((project) => ({
    params: { id: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;

// কালার ম্যাপিং (Cyber-Noir Color Logic)
const colorMap = {
  "gold-500": "text-yellow-500 border-yellow-500 bg-yellow-500/10 shadow-yellow-500/20",
  "indigo-500": "text-indigo-500 border-indigo-500 bg-indigo-500/10 shadow-indigo-500/20",
  "cyan-500": "text-cyan-500 border-cyan-500 bg-cyan-500/10 shadow-cyan-500/20",
  "emerald-500": "text-emerald-500 border-emerald-500 bg-emerald-500/10 shadow-emerald-500/20",
};
const themeClass = colorMap[project.accent] || colorMap["indigo-500"];
const accentColor = themeClass.split(' ')[0]; // e.g., text-indigo-500
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{project.title} | Case Study</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-slate-950 text-slate-200 font-sans antialiased min-h-screen">

    <nav class="w-full max-w-4xl mx-auto p-6 flex justify-between items-center text-xs font-mono text-slate-500 border-b border-slate-900/50">
        <a href="/" class="hover:text-white transition flex items-center gap-2">
            <i class="fa-solid fa-chevron-left"></i> NEXUS_TERMINAL
        </a>
        <span class="uppercase tracking-widest">Protocol: {project.id}</span>
    </nav>

    <main class="w-full max-w-4xl mx-auto p-6 md:p-12 animate-fade-in-up space-y-10">
        
        <header class="space-y-6">
            <div class={`inline-block px-3 py-1 rounded border text-[10px] font-mono uppercase tracking-widest ${themeClass.split(' ').slice(0,3).join(' ')}`}>
                // {project.role}
            </div>
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white tracking-tight leading-tight">
                {project.title}
            </h1>
            <p class="text-lg text-slate-400 font-light max-w-2xl leading-relaxed">
                {project.description}
            </p>
        </header>

        <div class="w-full aspect-video rounded-xl overflow-hidden border border-slate-800 bg-slate-900 relative group shadow-2xl">
            <div class={`absolute inset-0 opacity-10 group-hover:opacity-0 transition duration-700 ${themeClass.split(' ')[2]}`}></div>
            <img src={project.image} alt={project.title} class="w-full h-full object-cover transition duration-700 group-hover:scale-105">
        </div>

        <div class="flex flex-wrap gap-3">
            {project.stack.map(tech => (
                <span class="px-3 py-1.5 bg-slate-900/50 border border-slate-800 rounded text-xs font-mono text-slate-400 hover:border-slate-600 transition cursor-default">
                    {tech}
                </span>
            ))}
        </div>

        <article class="prose prose-invert prose-lg max-w-none text-slate-300 leading-8 font-light border-t border-slate-900 pt-10">
            <p>{project.content}</p>
        </article>

    </main>

    <footer class="mt-20 py-12 border-t border-slate-900 bg-slate-900/20 text-center">
        <div class="flex flex-col items-center gap-4">
            <p class="text-[10px] font-mono text-slate-600 uppercase">End of Transmission</p>
            <a href="/" class={`px-6 py-2 rounded-full border border-slate-800 bg-slate-950 text-xs font-mono hover:text-white transition ${themeClass.split(' ')[0]}`}>
                RETURN HOME
            </a>
        </div>
    </footer>

</body>
</html>
